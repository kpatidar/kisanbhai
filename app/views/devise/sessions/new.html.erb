<div class="main_bg">
  <div class="wrap">
    <div class="wrapper">	
      <div class="main">
        <div class="section group">
          <div class="col span_2_of_4">
            <div class="contact-form">
              <h2 class="style"><%= t('view.sign_in') %></h2>
              <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
                <%= devise_error_messages! %>
                <div>
                  <span><label><%= t('view.email') %></label></span>
                  <span><%= f.email_field :email, :autofocus => true, :class => 'text-field' %></span>
                </div>
                <div>
                  <span><label><%= t('view.password') %></label></span>
                  <span><%= f.password_field :password, :class => 'text-field' %></span>
                </div>
                <% if devise_mapping.rememberable? %>
                  <span><%= f.check_box :remember_me %><label><%= t('view.remember_me') %></label></span>
                <% end %>
                <div>
                  <span><%= f.submit t('view.sign_in') %></span>
                </div>
              <% end %>
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

